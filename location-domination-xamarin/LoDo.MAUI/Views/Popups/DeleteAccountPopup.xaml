<?xml version="1.0" encoding="utf-8"?>

<mopups:PopupPage
    x:Class="LoDo.MAUI.Views.Popups.DeleteAccountPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popviewmodels="clr-namespace:LoDo.MAUI.ViewModels.PopupViewModels"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Core;assembly=CommunityToolkit.Maui.Core"
    x:DataType="popviewmodels:DeleteAccountPopupViewModel"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    Background="#80153C64"
    CloseWhenBackgroundIsClicked="True">
    <Grid RowDefinitions="*,0.9*,*">
        <Border BackgroundColor="#E1E7E0" Margin="30,0" Grid.Row="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                    Offset="0,5"
                    Brush="Gray"
                    Radius="5"
                    Opacity="1">
                </Shadow>
            </Border.Shadow>
            <Grid
                Padding="10,10,10,10"
                RowDefinitions="1.5*,*,*,*"
                RowSpacing="5"
                VerticalOptions="Fill">
            <Grid Grid.Row="0" >
                <Image>
                    <Image.Source>
                        <FontImageSource
                            FontFamily="MaterialOutlined"
                            Glyph="{x:Static m:MaterialOutlined.Delete}"
                            Size="80"
                            Color="#153C64" />
                    </Image.Source>
                </Image>
            </Grid>
                <Label 
                    Grid.Row="1"
                    Text="Delete your account?" 
                    FontSize="20" 
                    FontAttributes="Bold" 
                    FontFamily="RalewayRegular" 
                    TextColor="#153C64"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
                <Button BackgroundColor="#941716" Grid.Row="2"  VerticalOptions="Center" HorizontalOptions="Center"
                        FontSize="20" 
                        Padding="5"
                        WidthRequest="118"
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#E1E7E0"
                        CornerRadius="7"
                        Text="Delete"/>
                <Label 
                    Grid.Row="3"
                    Text="Cancel" 
                    FontSize="20" 
                    FontFamily="RalewayRegular" 
                    TextColor="#2F6D80"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</mopups:PopupPage>