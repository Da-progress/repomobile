<?xml version="1.0" encoding="utf-8"?>

<mopups:PopupPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:LoDo.MAUI.Views.Related.Controls"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    x:Class="LoDo.MAUI.Views.Popups.NotificationSettingsPopup">
     <Grid RowDefinitions="*,1.25*,*">
         <Grid Grid.RowSpan="3" x:Name="PopupBackground" Opacity="1">
             <Grid Opacity="0.2" BackgroundColor="#153C64" Grid.RowSpan="3"/>      
         </Grid>
         <Border BackgroundColor="#E1E7E0" Margin="30,0" Grid.Row="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                    Offset="0,5"
                    Brush="Gray"
                    Radius="5"
                    Opacity="1">
                </Shadow>
            </Border.Shadow>
            <Grid
                Padding="10,10,10,10"
                RowDefinitions="*,2.5,*,*,*,*,*,*,*"
                RowSpacing="5"
                VerticalOptions="Fill">
                <Label 
                    Grid.Row="0"
                    Text="Push notifications" 
                    FontSize="20" 
                    FontAttributes="Bold" 
                    FontFamily="RalewayRegular" 
                    TextColor="#153C64"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
                <Rectangle 
                    Grid.Row="1" 
                    Margin="15,0"
                    MaximumHeightRequest="2"
                    VerticalOptions="Fill"
                    BackgroundColor="#2F6D80"/>
                <Grid ColumnDefinitions="6*,*" Grid.Row="2"  Margin="25,0">
                    <Label 
                        Grid.Column="0"
                        Text="Pause all" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#2F6D80"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"/>
                    <custom:BlueSwitch Grid.Column="1" Scale="0.7"/>
                </Grid>
                <Grid ColumnDefinitions="6*,*" Grid.Row="3"  Margin="25,0">
                    <Label 
                        Grid.Column="0"
                        Text="Sleep mode" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#2F6D80"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"/>
                    <custom:BlueSwitch Grid.Column="1" Scale="0.7"/>
                </Grid>
                <Grid ColumnDefinitions="6*,*" Grid.Row="4"  Margin="25,0">
                    <Label 
                        Grid.Column="0"
                        Text="Game notifications" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#2F6D80"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"/>
                    <custom:BlueSwitch Grid.Column="1" Scale="0.7"/>
                </Grid>
                <Grid ColumnDefinitions="6*,*" Grid.Row="5"  Margin="25,0">
                    <Label 
                        Grid.Column="0"
                        Text="System notifications" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#2F6D80"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"/>
                    <custom:BlueSwitch Grid.Column="1" Scale="0.7"/>
                </Grid>
                <Grid ColumnDefinitions="6*,*" Grid.Row="6"  Margin="25,0">
                    <Label 
                        Grid.Column="0"
                        Text="Email notifications" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#2F6D80"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"/>
                    <custom:BlueSwitch Grid.Column="1" Scale="0.7"/>
                </Grid>
                <Grid ColumnDefinitions="6*,*" Grid.Row="7"  Margin="25,0">
                    <Label 
                        Grid.Column="0"
                        Text="Sms notifications" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        FontFamily="RalewayRegular" 
                        TextColor="#2F6D80"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"/>
                    <custom:BlueSwitch Grid.Column="1" Scale="0.7"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</mopups:PopupPage>