<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoDo.MAUI.Views.Related.UnloggedHeaderView">
    <Grid BackgroundColor="Transparent" x:Name="ContainerGrid" RowDefinitions="*,*" VerticalOptions="Center" >
        <Grid>
            <Image HeightRequest="100" WidthRequest="100" Aspect="Fill" Source="unlogged_header" />
        </Grid>
        <Grid RowDefinitions="2*,*" Grid.Row="1">
            <VerticalStackLayout Spacing="10">
                <Label
                    Text="Hello!"
                    FontSize="32"
                    FontAttributes="Bold"
                    FontFamily="RalewayRegular"
                    TextColor="#2F6D80"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center" />
                <Label
                    Text="Get ready to fly"
                    FontSize="24"
                    FontAttributes="Bold"
                    FontFamily="RalewayRegular"
                    TextColor="#2F6D80"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentView>